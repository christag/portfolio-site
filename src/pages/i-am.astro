---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';

// Get the bio content
const bioEntries = await getCollection('bio');
const bioEntry = bioEntries[0]; // Get the first (and only) bio entry
const { Content } = await bioEntry.render();
const { data } = bioEntry;
---

<Layout title={data.seo.title} description={data.seo.description}>
  <SEO
    slot="head"
    title={data.seo.title}
    description={data.seo.description}
    keywords={data.seo.keywords}
    author={data.author}
    image={data.seo.openGraph.image}
    type={data.seo.openGraph.type}
    canonical={Astro.url.href}
    openGraphTitle={data.seo.openGraph.title}
    openGraphDescription={data.seo.openGraph.description}
    twitterCard={data.seo.twitter.card}
    twitterTitle={data.seo.twitter.title}
    twitterDescription={data.seo.twitter.description}
    twitterImage={data.seo.twitter.image}
    structuredData={{
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: data.profile.name,
      jobTitle: data.profile.title,
      description: data.seo.description,
      url: Astro.url.href,
      image: data.seo.openGraph.image,
      sameAs: [data.social.linkedin, data.social.portfolio],
      email: data.social.email,
      address: {
        '@type': 'PostalAddress',
        addressLocality: data.profile.location,
      },
      alumniOf: {
        '@type': 'Organization',
        name: 'Hofstra University',
      },
      hasCredential: [
        {
          '@type': 'EducationalOccupationalCredential',
          name: 'PMP Certification',
        },
        {
          '@type': 'EducationalOccupationalCredential',
          name: 'Product Management 360',
        },
        {
          '@type': 'EducationalOccupationalCredential',
          name: 'ITIL v3',
        },
      ],
    }}
  />
  <style>
    /* Bio page specific styles with punk/brutalist elements */
    .bio-container {
      min-height: 100vh;
      padding-top: 100px; /* Account for fixed navigation */
      padding-bottom: 100px; /* Account for fixed footer */
      overflow-x: hidden; /* Prevent horizontal scroll */
      max-width: 100vw;
    }

    .container-constrained {
      overflow-x: hidden;
      max-width: 100%;
    }

    /* Hero section with asymmetric layout */
    .hero-section {
      background: var(--glass-bg-primary);
      backdrop-filter: blur(var(--glass-blur-navigation));
      border: 1px solid var(--glass-border-light);
      border-radius: var(--glass-radius-xl);
      padding: 4rem 2rem;
      margin: 2rem 0 4rem 0;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero-particles {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      pointer-events: none;
    }

    .hero-title {
      font-size: clamp(3rem, 8vw, 8rem);
      font-weight: 900;
      line-height: 0.8;
      margin: 0;
      color: var(--color-text-primary);
      text-transform: uppercase;
      letter-spacing: -0.05em;
      position: relative;
      z-index: 2;
    }

    .hero-subtitle {
      font-size: clamp(1.2rem, 3vw, 2rem);
      font-weight: 600;
      margin: 1rem 0 0 0;
      color: var(--color-text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    /* Punk/brutalist profile section */
    .profile-section {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      margin: 4rem 0;
    }

    @media (min-width: 1013px) {
      .profile-section {
        grid-template-columns: 1fr 1.618fr; /* Golden ratio */
      }
    }

    .profile-card {
      background: var(--glass-bg-secondary);
      backdrop-filter: blur(var(--glass-blur-container));
      border: 2px solid var(--glass-border-heavy);
      border-radius: var(--glass-radius-large);
      padding: 2rem;
      position: relative;
      transform: rotate(-1deg); /* Slight misalignment */
    }

    .profile-card::before {
      content: '[ PROFILE ]';
      position: absolute;
      top: -12px;
      left: 1rem;
      background: var(--color-accent-primary);
      color: white;
      padding: 0.25rem 0.75rem;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    @media (max-width: 597px) {
      .profile-card::before {
        font-size: 0.65rem !important;
        padding: 0.2rem 0.5rem !important;
        top: -10px !important;
        left: 0.5rem !important;
      }
    }

    .personality-split {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin: 1.5rem 0;
    }

    .personality-card {
      background: var(--glass-bg-primary);
      backdrop-filter: blur(var(--glass-blur-button));
      border: 1px solid var(--glass-border-medium);
      border-radius: var(--glass-radius-medium);
      padding: 1rem;
      text-align: center;
    }

    .personality-card:nth-child(1) {
      border-left: 4px solid var(--color-accent-primary);
    }

    .personality-card:nth-child(2) {
      border-left: 4px solid var(--color-accent-secondary);
      transform: rotate(1deg);
    }

    .personality-card:nth-child(3) {
      border-left: 4px solid var(--color-accent-tertiary);
      transform: rotate(-0.5deg);
    }

    .personality-card:nth-child(4) {
      border-left: 4px solid #ff6b6b;
      transform: rotate(0.8deg);
    }

    .personality-card:nth-child(5) {
      border-left: 4px solid #4ecdc4;
      transform: rotate(-0.3deg);
    }

    .personality-card:nth-child(6) {
      border-left: 4px solid #45b7d1;
      transform: rotate(0.6deg);
    }

    .personality-card:nth-child(7) {
      border-left: 4px solid #96ceb4;
      transform: rotate(-0.7deg);
    }

    .personality-card:nth-child(8) {
      border-left: 4px solid #ffeaa7;
      transform: rotate(0.4deg);
    }

    /* Content sections with asymmetric grid */
    .content-section {
      background: var(--glass-bg-primary);
      backdrop-filter: blur(var(--glass-blur-container));
      border: 1px solid var(--glass-border-light);
      border-radius: var(--glass-radius-large);
      padding: 3rem 2rem;
      margin: 3rem 0;
      position: relative;
    }

    .content-section.misalign-left {
      transform: translateX(-1rem) rotate(-0.5deg);
    }

    .content-section.misalign-right {
      transform: translateX(1rem) rotate(0.5deg);
    }

    /* Brutalist section headers */
    .section-header {
      font-size: clamp(2rem, 5vw, 4rem);
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: -0.02em;
      margin: 0 0 2rem 0;
      color: var(--color-text-primary);
      position: relative;
    }

    .section-header::before {
      content: '//';
      color: var(--color-accent-primary);
      margin-right: 0.5rem;
    }

    .section-header::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 60%;
      height: 4px;
      background: linear-gradient(
        90deg,
        var(--color-accent-primary),
        transparent
      );
    }

    /* Code block styling */
    .code-block {
      background: var(--glass-bg-tertiary);
      backdrop-filter: blur(var(--glass-blur-button));
      border: 1px solid var(--glass-border-heavy);
      border-radius: var(--glass-radius-medium);
      padding: 1.5rem;
      margin: 2rem 0;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      font-size: 0.9rem;
      line-height: 1.6;
      overflow-x: auto;
      position: relative;
    }

    .code-block::before {
      content: '{ CODE }';
      position: absolute;
      top: -12px;
      right: 1rem;
      background: var(--color-accent-secondary);
      color: white;
      padding: 0.25rem 0.75rem;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    @media (max-width: 597px) {
      .code-block::before {
        font-size: 0.65rem !important;
        padding: 0.2rem 0.5rem !important;
        top: -10px !important;
        right: 0.5rem !important;
      }
    }

    /* Timeline/Experience Section */
    .timeline-section {
      background: var(--glass-bg-primary);
      backdrop-filter: blur(var(--glass-blur-container));
      border: 1px solid var(--glass-border-light);
      border-radius: var(--glass-radius-large);
      padding: 3rem 2rem;
      margin: 4rem 0;
      transform: rotate(-0.3deg);
    }

    .timeline-container {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
    }

    .timeline-item {
      display: flex;
      margin-bottom: 3rem;
      position: relative;
    }

    .timeline-item:last-child {
      margin-bottom: 0;
    }

    .timeline-marker {
      flex-shrink: 0;
      width: 60px;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-right: 2rem;
    }

    .timeline-dot {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: var(--glass-bg-secondary);
      border: 3px solid var(--color-accent-primary);
      position: relative;
      z-index: 2;
    }

    .timeline-dot.active {
      background: var(--color-accent-primary);
      box-shadow: 0 0 0 6px rgba(184, 134, 154, 0.2);
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%,
      100% {
        box-shadow: 0 0 0 6px rgba(184, 134, 154, 0.2);
      }
      50% {
        box-shadow: 0 0 0 12px rgba(184, 134, 154, 0.1);
      }
    }

    .timeline-line {
      width: 2px;
      height: 100%;
      background: linear-gradient(
        to bottom,
        var(--color-accent-primary),
        rgba(184, 134, 154, 0.3)
      );
      margin-top: 10px;
      position: absolute;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
    }

    .timeline-item:last-child .timeline-line {
      display: none;
    }

    .timeline-content {
      flex: 1;
      background: var(--glass-bg-secondary);
      backdrop-filter: blur(var(--glass-blur-button));
      border: 1px solid var(--glass-border-medium);
      border-radius: var(--glass-radius-medium);
      padding: 2rem;
      position: relative;
      transform: rotate(0.2deg);
    }

    .timeline-content::before {
      content: '';
      position: absolute;
      left: -10px;
      top: 30px;
      width: 0;
      height: 0;
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
      border-right: 10px solid var(--glass-border-medium);
    }

    .timeline-title {
      font-size: clamp(1.3rem, 3vw, 1.8rem);
      font-weight: 800;
      color: var(--color-text-primary);
      margin: 0 0 0.5rem 0;
      text-transform: uppercase;
      letter-spacing: -0.01em;
    }

    .timeline-period {
      font-size: 0.9rem;
      color: var(--color-accent-primary);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin: 0 0 1rem 0;
    }

    .timeline-description {
      color: var(--color-text-secondary);
      line-height: 1.6;
      margin: 0 0 1.5rem 0;
      font-style: italic;
    }

    .timeline-achievements {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .timeline-achievements li {
      color: var(--color-text-secondary);
      margin: 0.75rem 0;
      padding-left: 1.5rem;
      position: relative;
      line-height: 1.5;
    }

    .timeline-achievements li::before {
      content: '▸';
      position: absolute;
      left: 0;
      color: var(--color-accent-primary);
      font-weight: bold;
    }

    .timeline-achievements li strong {
      color: var(--color-text-primary);
    }

    /* Social links with punk styling */
    .social-section {
      background: var(--glass-bg-secondary);
      backdrop-filter: blur(var(--glass-blur-container));
      border: 2px solid var(--glass-border-heavy);
      border-radius: var(--glass-radius-large);
      padding: 3rem 2rem;
      margin: 4rem 0;
      text-align: center;
      transform: rotate(0.5deg);
    }

    .social-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin: 2rem 0;
    }

    .social-link {
      background: var(--glass-bg-primary);
      backdrop-filter: blur(var(--glass-blur-button));
      border: 1px solid var(--glass-border-medium);
      border-radius: var(--glass-radius-medium);
      padding: 1rem;
      text-decoration: none;
      color: var(--color-text-primary);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .social-icon {
      width: 24px;
      height: 24px;
      color: var(--color-accent-primary);
      transition: color 0.3s ease;
    }

    .social-link:hover {
      background: var(--glass-bg-secondary);
      border-color: var(--glass-border-heavy);
      transform: translateY(-2px);
      color: var(--color-accent-primary);
    }

    .social-link:hover .social-icon {
      color: var(--color-accent-secondary);
    }

    .social-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      transition: left 0.5s ease;
    }

    .social-link:hover::before {
      left: 100%;
    }

    /* Call to action section */
    .cta-section {
      background: var(--glass-bg-tertiary);
      backdrop-filter: blur(var(--glass-blur-navigation));
      border: 2px solid var(--color-accent-primary);
      border-radius: var(--glass-radius-xl);
      padding: 4rem 2rem;
      margin: 4rem 0;
      text-align: center;
      position: relative;
      transform: rotate(-0.5deg);
    }

    .cta-section::before {
      content: '[ READY TO BREAK RULES? ]';
      position: absolute;
      top: -15px;
      left: 50%;
      transform: translateX(-50%);
      background: var(--color-accent-primary);
      color: white;
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    @media (max-width: 597px) {
      .cta-section::before {
        font-size: 0.65rem !important;
        padding: 0.3rem 0.6rem !important;
        top: -12px !important;
        white-space: nowrap !important;
      }
    }

    .cta-text {
      font-size: clamp(1.5rem, 4vw, 3rem);
      font-weight: 700;
      margin: 0;
      color: var(--color-text-primary);
      font-style: italic;
    }

    /* Responsive adjustments */
    @media (max-width: 1012px) {
      .profile-section {
        grid-template-columns: 1fr !important; /* Stack vertically in tablet range */
        gap: 1.5rem;
      }

      .content-section {
        transform: none; /* Remove misalignment on tablets */
        margin: 2rem 0;
      }

      .personality-split {
        grid-template-columns: repeat(2, 1fr); /* 2 columns on tablets */
      }
    }

    /* Specific fix for the 590px cutoff range */
    @media (max-width: 768px) {
      .profile-section {
        grid-template-columns: 1fr !important;
        margin: 2rem 0 !important;
        width: 100% !important;
        max-width: 100% !important;
      }

      .personality-split {
        grid-template-columns: 1fr !important; /* Single column on mobile */
      }
    }

    @media (max-width: 768px) {
      .hero-section {
        padding: 3rem 1.5rem;
        margin: 1rem 0 3rem 0;
      }

      .content-section.misalign-left,
      .content-section.misalign-right {
        transform: none; /* Remove misalignment on mobile */
      }

      .profile-card,
      .social-section,
      .cta-section {
        transform: none; /* Remove rotation on mobile */
      }

      .personality-split {
        grid-template-columns: 1fr;
      }
    }

    /* Mobile text fixes for <625px */
    @media (max-width: 625px) {
      .hero-title {
        font-size: clamp(
          2rem,
          10vw,
          4rem
        ) !important; /* Smaller minimum size */
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
        hyphens: auto !important;
        max-width: 100% !important;
        padding: 0 1rem !important;
      }

      .hero-subtitle {
        font-size: clamp(1rem, 4vw, 1.5rem) !important; /* Smaller for mobile */
        max-width: 100% !important;
        padding: 0 1rem !important;
      }

      .section-header {
        font-size: clamp(
          1.5rem,
          6vw,
          2.5rem
        ) !important; /* Smaller for mobile */
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
        max-width: 100% !important;
      }

      .content-section {
        padding: 2rem 1rem; /* Less padding on mobile */
      }

      .profile-card {
        padding: 1.5rem 1rem; /* Less padding on mobile */
      }

      .personality-card {
        padding: 0.75rem; /* Less padding on mobile */
      }

      .personality-card h3 {
        font-size: 0.9rem;
      }

      .personality-card p {
        font-size: 0.85rem;
      }

      .social-grid {
        grid-template-columns: 1fr; /* Single column on small mobile */
        gap: 0.75rem;
      }

      .social-link {
        padding: 0.75rem;
        font-size: 0.9rem;
      }

      .cta-text {
        font-size: clamp(1.2rem, 5vw, 2rem); /* Smaller for mobile */
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      /* Ensure all text elements wrap properly */
      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      span,
      div {
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
        hyphens: auto !important;
        max-width: 100% !important;
      }

      /* Code blocks on mobile */
      .content-wrapper pre {
        padding: 1rem !important;
        font-size: 0.8rem !important;
        max-width: 100% !important;
        overflow-x: auto !important;
        background: #f5f5f5 !important;
        color: #171717 !important;
      }

      [data-theme='dark'] .content-wrapper pre {
        background: #1a1a1a !important;
        color: #f5f5f0 !important;
      }

      /* Content wrapper specific fixes */
      .content-wrapper {
        max-width: 100% !important;
        padding: 0 1rem !important;
        overflow-x: hidden !important;
      }

      .content-wrapper h2 {
        font-size: clamp(1.2rem, 5vw, 2rem) !important;
      }

      .content-wrapper h3 {
        font-size: clamp(1rem, 4vw, 1.5rem) !important;
      }

      .content-wrapper p {
        font-size: 0.95rem !important;
        line-height: 1.6 !important;
      }

      /* Fix the main container */
      .bio-container {
        padding-left: 0 !important;
        padding-right: 0 !important;
      }

      .container-constrained {
        padding-left: 1rem !important;
        padding-right: 1rem !important;
      }
    }

    /* Fix for the specific 590px cutoff issue */
    @media (max-width: 650px) {
      /* Ensure no grid layout causes overflow */
      .profile-section {
        grid-template-columns: 1fr !important;
        gap: 1rem !important;
        margin: 1.5rem 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        overflow: hidden !important;
      }

      .content-section {
        width: 100% !important;
        max-width: 100% !important;
        margin: 1.5rem 0 !important;
        padding: 1.5rem 1rem !important;
        overflow: hidden !important;
      }

      .personality-split {
        grid-template-columns: 1fr !important;
        gap: 0.75rem !important;
      }
    }

    /* Extra small mobile fixes for 390px-597px */
    @media (max-width: 597px) {
      /* Fix the main containers */
      .bio-container {
        padding-left: 0 !important;
        padding-right: 0 !important;
        width: 100% !important;
        max-width: 100vw !important;
        overflow-x: hidden !important;
      }

      .container-constrained {
        width: 100% !important;
        max-width: 100% !important;
        padding-left: 0.75rem !important;
        padding-right: 0.75rem !important;
        margin: 0 !important;
        box-sizing: border-box !important;
      }

      /* Fix sections that might overflow */
      .hero-section {
        margin-left: 0 !important;
        margin-right: 0 !important;
        border-radius: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
      }

      .profile-section {
        margin: 2rem 0 !important;
        width: 100% !important;
        max-width: 100% !important;
      }

      .profile-card {
        padding: 1.2rem 0.8rem !important;
        transform: none !important; /* Remove rotation on mobile */
        margin: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        border-radius: 12px !important;
      }

      /* Fix personality cards - single column on small screens */
      .personality-split {
        grid-template-columns: 1fr !important;
        gap: 0.75rem !important;
        width: 100% !important;
      }

      .personality-card {
        padding: 0.6rem !important;
        transform: none !important; /* Remove rotation */
        margin: 0 !important;
        width: 100% !important;
      }

      .personality-card h3 {
        font-size: 0.85rem !important;
      }

      .personality-card p {
        font-size: 0.8rem !important;
      }

      /* Fix content sections */
      .content-section {
        padding: 1.5rem 0.8rem !important;
        margin: 1.5rem 0 !important;
        transform: none !important; /* Remove misalignment */
        width: 100% !important;
        max-width: 100% !important;
        border-radius: 12px !important;
      }

      /* Fix timeline section */
      .timeline-section {
        padding: 2rem 0.8rem !important;
        margin: 2rem 0 !important;
        transform: none !important;
        width: 100% !important;
        border-radius: 12px !important;
      }

      .timeline-container {
        max-width: 100% !important;
      }

      .timeline-item {
        flex-direction: column !important;
        margin-bottom: 2rem !important;
      }

      .timeline-marker {
        width: 100% !important;
        flex-direction: row !important;
        justify-content: flex-start !important;
        margin-right: 0 !important;
        margin-bottom: 1rem !important;
      }

      .timeline-dot {
        margin-right: 1rem !important;
      }

      .timeline-line {
        display: none !important;
      }

      .timeline-content {
        transform: none !important;
        padding: 1.5rem !important;
      }

      .timeline-content::before {
        display: none !important;
      }


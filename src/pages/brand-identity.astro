---
import Layout from '../layouts/Layout.astro';
import DynamicBackground from '../components/DynamicBackground.astro';
import AnimationDemo from '../components/demo/AnimationDemo.astro';
---

<Layout title="Brand Identity - Christopher Tagliaferro">
  <DynamicBackground
    intensity="subtle"
    colorAccents={true}
    glitchEffects={false}
  />

  <div class="brand-showcase">
    <div class="container">
      <!-- Header -->
      <header class="brand-header">
        <h1 class="brand-title">Brand Identity</h1>
        <p class="brand-subtitle">
          Christopher Tagliaferro • Technology Consultant & Virtual CIO
        </p>
      </header>

      <!-- Color Palette -->
      <section class="brand-section">
        <h2 class="section-title">Color Palette</h2>

        <!-- Primary Colors -->
        <div class="color-group">
          <h3 class="color-group-title">Primary Colors</h3>
          <div class="color-grid">
            <div class="color-card">
              <div class="color-swatch" style="background: #b8869a;"></div>
              <div class="color-info">
                <span class="color-name">Dusty Pink</span>
                <span class="color-hex">#B8869A</span>
                <span class="color-rgb">RGB(184, 134, 154)</span>
                <span class="color-usage"
                  >Primary accent • CTAs • Key interactions</span
                >
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #00d4ff;"></div>
              <div class="color-info">
                <span class="color-name">Electric Blue</span>
                <span class="color-hex">#00D4FF</span>
                <span class="color-rgb">RGB(0, 212, 255)</span>
                <span class="color-usage"
                  >Secondary accent • Special highlights</span
                >
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #4ecdc4;"></div>
              <div class="color-info">
                <span class="color-name">Mint Green</span>
                <span class="color-hex">#4ECDC4</span>
                <span class="color-rgb">RGB(78, 205, 196)</span>
                <span class="color-usage">Tertiary accent • Special cases</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Light Theme -->
        <div class="color-group">
          <h3 class="color-group-title">Light Theme</h3>
          <div class="color-grid">
            <div class="color-card">
              <div class="color-swatch" style="background: #fafafa;"></div>
              <div class="color-info">
                <span class="color-name">Pure Background</span>
                <span class="color-hex">#FAFAFA</span>
                <span class="color-rgb">RGB(250, 250, 250)</span>
                <span class="color-usage">Primary background</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #f5f5f5;"></div>
              <div class="color-info">
                <span class="color-name">Subtle Sections</span>
                <span class="color-hex">#F5F5F5</span>
                <span class="color-rgb">RGB(245, 245, 245)</span>
                <span class="color-usage">Secondary background</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #e5e5e5;"></div>
              <div class="color-info">
                <span class="color-name">Card Containers</span>
                <span class="color-hex">#E5E5E5</span>
                <span class="color-rgb">RGB(229, 229, 229)</span>
                <span class="color-usage">Tertiary background</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #171717;"></div>
              <div class="color-info">
                <span class="color-name">High Contrast Text</span>
                <span class="color-hex">#171717</span>
                <span class="color-rgb">RGB(23, 23, 23)</span>
                <span class="color-usage">Primary text</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #404040;"></div>
              <div class="color-info">
                <span class="color-name">Medium Contrast</span>
                <span class="color-hex">#404040</span>
                <span class="color-rgb">RGB(64, 64, 64)</span>
                <span class="color-usage">Secondary text</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #737373;"></div>
              <div class="color-info">
                <span class="color-name">Low Contrast</span>
                <span class="color-hex">#737373</span>
                <span class="color-rgb">RGB(115, 115, 115)</span>
                <span class="color-usage">Tertiary text</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Dark Theme -->
        <div class="color-group">
          <h3 class="color-group-title">Dark Theme</h3>
          <div class="color-grid">
            <div class="color-card">
              <div class="color-swatch" style="background: #0a0a0a;"></div>
              <div class="color-info">
                <span class="color-name">Almost Black</span>
                <span class="color-hex">#0A0A0A</span>
                <span class="color-rgb">RGB(10, 10, 10)</span>
                <span class="color-usage">Primary background</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #171717;"></div>
              <div class="color-info">
                <span class="color-name">Deep Black</span>
                <span class="color-hex">#171717</span>
                <span class="color-rgb">RGB(23, 23, 23)</span>
                <span class="color-usage">Secondary background</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #262626;"></div>
              <div class="color-info">
                <span class="color-name">Medium Dark</span>
                <span class="color-hex">#262626</span>
                <span class="color-rgb">RGB(38, 38, 38)</span>
                <span class="color-usage">Card containers</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #f5f5f0;"></div>
              <div class="color-info">
                <span class="color-name">Off-White</span>
                <span class="color-hex">#F5F5F0</span>
                <span class="color-rgb">RGB(245, 245, 240)</span>
                <span class="color-usage">Primary text</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #e0e0e0;"></div>
              <div class="color-info">
                <span class="color-name">Light Medium</span>
                <span class="color-hex">#E0E0E0</span>
                <span class="color-rgb">RGB(224, 224, 224)</span>
                <span class="color-usage">Secondary text</span>
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #a3a3a3;"></div>
              <div class="color-info">
                <span class="color-name">Muted Light</span>
                <span class="color-hex">#A3A3A3</span>
                <span class="color-rgb">RGB(163, 163, 163)</span>
                <span class="color-usage">Tertiary text</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Brutalist Colors -->
        <div class="color-group">
          <h3 class="color-group-title">Brutalist Accents</h3>
          <div class="color-grid">
            <div class="color-card">
              <div class="color-swatch" style="background: #000000;"></div>
              <div class="color-info">
                <span class="color-name">Pure Black</span>
                <span class="color-hex">#000000</span>
                <span class="color-rgb">RGB(0, 0, 0)</span>
                <span class="color-usage"
                  >High contrast elements (light mode)</span
                >
              </div>
            </div>

            <div class="color-card">
              <div class="color-swatch" style="background: #ffffff;"></div>
              <div class="color-info">
                <span class="color-name">Pure White</span>
                <span class="color-hex">#FFFFFF</span>
                <span class="color-rgb">RGB(255, 255, 255)</span>
                <span class="color-usage"
                  >High contrast elements (dark mode)</span
                >
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Typography -->
      <section class="brand-section">
        <h2 class="section-title">Typography</h2>

        <div class="typography-showcase">
          <div class="font-family">
            <h3 class="font-name">Inter</h3>
            <p class="font-usage">
              Primary font • Headings • Body text • UI elements
            </p>
            <div class="font-samples">
              <div class="font-sample">
                <span class="sample-label">H1 Display</span>
                <h1 class="sample-text sample-h1">The quick brown fox</h1>
              </div>
              <div class="font-sample">
                <span class="sample-label">H2 Heading</span>
                <h2 class="sample-text sample-h2">The quick brown fox</h2>
              </div>
              <div class="font-sample">
                <span class="sample-label">H3 Subheading</span>
                <h3 class="sample-text sample-h3">The quick brown fox</h3>
              </div>
              <div class="font-sample">
                <span class="sample-label">Body Text</span>
                <p class="sample-text sample-body">
                  The quick brown fox jumps over the lazy dog. This is a sample
                  of body text that demonstrates the readability and character
                  of our primary typeface.
                </p>
              </div>
              <div class="font-sample">
                <span class="sample-label">Small Text</span>
                <p class="sample-text sample-small">
                  The quick brown fox jumps over the lazy dog.
                </p>
              </div>
            </div>
          </div>

          <div class="font-family">
            <h3 class="font-name">JetBrains Mono</h3>
            <p class="font-usage">Monospace font • Code • Technical elements</p>
            <div class="font-samples">
              <div class="font-sample">
                <span class="sample-label">Code Sample</span>
                <code class="sample-text sample-code"
                  >const greeting = "Hello, World!";</code
                >
              </div>
              <div class="font-sample">
                <span class="sample-label">Technical Data</span>
                <code class="sample-text sample-code-block"
                  >function calculateMetrics() &#123;<br /> return &#123;<br /> performance:
                  95.2,<br /> reliability: 99.8,<br /> efficiency: 87.1<br /> &#125;;<br
                  />&#125;</code
                >
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Glass System -->
      <section class="brand-section">
        <h2 class="section-title">Glassmorphism System</h2>

        <div class="glass-showcase">
          <div class="glass-samples">
            <div class="glass-sample glass-primary">
              <h4>Primary Glass</h4>
              <p>15% opacity • Light blur</p>
              <code>backdrop-filter: blur(16px)</code>
            </div>

            <div class="glass-sample glass-secondary">
              <h4>Secondary Glass</h4>
              <p>20% opacity • Medium blur</p>
              <code>backdrop-filter: blur(20px)</code>
            </div>

            <div class="glass-sample glass-tertiary">
              <h4>Tertiary Glass</h4>
              <p>25% opacity • Strong blur</p>
              <code>backdrop-filter: blur(24px)</code>
            </div>
          </div>

          <div class="blur-values">
            <h4>Blur System</h4>
            <ul>
              <li><strong>Minimal:</strong> 8px (low-end devices)</li>
              <li><strong>Button:</strong> 16px (controls)</li>
              <li><strong>Container:</strong> 20px (cards)</li>
              <li><strong>Navigation:</strong> 24px (large surfaces)</li>
              <li><strong>Modal:</strong> 32px (overlays)</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Brand Principles -->
      <section class="brand-section">
        <h2 class="section-title">Design Principles</h2>

        <div class="principles-grid">
          <div class="principle-card">
            <h4>Liquid Glass</h4>
            <p>
              Modern glassmorphism with Apple-inspired transparency and depth
            </p>
          </div>

          <div class="principle-card">
            <h4>Punk Aesthetic</h4>
            <p>Sharp contrasts, minimal blur, high-impact visual elements</p>
          </div>

          <div class="principle-card">
            <h4>Strategic Color</h4>
            <p>Selective use of accent colors for maximum impact and clarity</p>
          </div>

          <div class="principle-card">
            <h4>High Contrast</h4>
            <p>Black/white elements for accessibility and visual punch</p>
          </div>
        </div>
      </section>

      <!-- Animation Demos Section -->
      <section class="brand-section">
        <h2 class="section-title">Interactive Components</h2>
        <p class="section-description">
          Explore the glassmorphism design system and punk/brutalist aesthetic
          components, including loading animations, buttons, and interactive
          elements.
        </p>
        <div class="animation-demo-container">
          <AnimationDemo />
        </div>
      </section>
    </div>
  </div>
</Layout>

<style lang="scss">
  .brand-showcase {
    min-height: 100vh;
    padding: 6rem 0 2rem 0; // Added more top padding

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
  }

  .brand-header {
    text-align: center;
    margin-bottom: 4rem;

    .brand-title {
      font-size: 3rem;
      font-weight: 700;
      color: var(--color-text-primary);
      margin-bottom: 1rem;
    }

    .brand-subtitle {
      font-size: 1.2rem;
      color: var(--color-text-secondary);
      font-weight: 400;
    }
  }

  .brand-section {
    margin-bottom: 4rem;

    .section-title {
      font-size: 2rem;
      font-weight: 600;
      color: var(--color-text-primary);
      margin-bottom: 2rem;
      border-bottom: 2px solid var(--color-accent-primary);
      padding-bottom: 0.5rem;
    }

    .section-description {
      color: var(--color-text-secondary);
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 3rem;
      max-width: 800px;
    }
  }

  .color-group {
    margin-bottom: 3rem;

    .color-group-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--color-text-primary);
      margin-bottom: 1.5rem;
    }
  }

  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .color-card {
    background: var(--glass-bg-secondary);
    backdrop-filter: blur(var(--glass-blur-container));
    border: 1px solid var(--glass-border-medium);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 32px var(--glass-shadow-medium);
    }

    .color-swatch {
      width: 100%;
      height: 80px;
      border-radius: 8px;
      margin-bottom: 1rem;
      border: 1px solid var(--glass-border-light);
    }

    .color-info {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      .color-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--color-text-primary);
      }

      .color-hex {
        font-family: var(--font-mono);
        font-weight: 600;
        color: var(--color-accent-primary);
        font-size: 1rem;
      }

      .color-rgb {
        font-family: var(--font-mono);
        color: var(--color-text-secondary);
        font-size: 0.9rem;
      }

      .color-usage {
        color: var(--color-text-tertiary);
        font-size: 0.9rem;
        font-style: italic;
      }
    }
  }

  .typography-showcase {
    display: grid;
    gap: 3rem;
  }

  .font-family {
    background: var(--glass-bg-secondary);
    backdrop-filter: blur(var(--glass-blur-container));
    border: 1px solid var(--glass-border-medium);
    border-radius: 12px;
    padding: 2rem;

    .font-name {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--color-text-primary);
      margin-bottom: 0.5rem;
    }

    .font-usage {
      color: var(--color-text-secondary);
      margin-bottom: 2rem;
    }
  }

  .font-samples {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .font-sample {
    .sample-label {
      display: block;
      font-size: 0.9rem;
      font-weight: 600;
      color: var(--color-accent-primary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .sample-text {
      margin: 0;
      color: var(--color-text-primary);
    }

    .sample-h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }

    .sample-h2 {
      font-size: 2rem;
      font-weight: 600;
    }

    .sample-h3 {
      font-size: 1.5rem;
      font-weight: 600;
    }

    .sample-body {
      font-size: 1rem;
      line-height: 1.6;
    }

    .sample-small {
      font-size: 0.875rem;
      line-height: 1.5;
    }

    .sample-code {
      font-family: var(--font-mono);
      background: var(--glass-bg-tertiary);
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.9rem;
    }

    .sample-code-block {
      font-family: var(--font-mono);
      background: var(--glass-bg-tertiary);
      padding: 1rem;
      border-radius: 8px;
      font-size: 0.85rem;
      line-height: 1.4;
      white-space: pre;
      display: block;
    }
  }

  .glass-showcase {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }

  .glass-samples {
    display: grid;
    gap: 1rem;
  }

  .glass-sample {
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--glass-border-medium);

    h4 {
      margin: 0 0 0.5rem 0;
      color: var(--color-text-primary);
      font-weight: 600;
    }

    p {
      margin: 0 0 1rem 0;
      color: var(--color-text-secondary);
      font-size: 0.9rem;
    }

    code {
      font-family: var(--font-mono);
      font-size: 0.8rem;
      color: var(--color-accent-secondary);
    }
  }

  .glass-primary {
    background: var(--glass-bg-primary);
    backdrop-filter: blur(16px);
  }

  .glass-secondary {
    background: var(--glass-bg-secondary);
    backdrop-filter: blur(20px);
  }

  .glass-tertiary {
    background: var(--glass-bg-tertiary);
    backdrop-filter: blur(24px);
  }

  .blur-values {
    background: var(--glass-bg-secondary);
    backdrop-filter: blur(var(--glass-blur-container));
    border: 1px solid var(--glass-border-medium);
    border-radius: 12px;
    padding: 2rem;
    height: fit-content;

    h4 {
      margin: 0 0 1rem 0;
      color: var(--color-text-primary);
      font-weight: 600;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;

      li {
        padding: 0.5rem 0;
        color: var(--color-text-secondary);
        font-family: var(--font-mono);
        font-size: 0.9rem;

        strong {
          color: var(--color-text-primary);
        }
      }
    }
  }

  .principles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .principle-card {
    background: var(--glass-bg-secondary);
    backdrop-filter: blur(var(--glass-blur-container));
    border: 1px solid var(--glass-border-medium);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 32px var(--glass-shadow-medium);
    }

    h4 {
      margin: 0 0 1rem 0;
      color: var(--color-accent-primary);
      font-weight: 600;
      font-size: 1.2rem;
    }

    p {
      margin: 0;
      color: var(--color-text-secondary);
      line-height: 1.5;
    }
  }

  .animation-demo-container {
    background: var(--glass-bg-primary);
    backdrop-filter: blur(var(--glass-blur-container));
    border: 1px solid var(--glass-border-light);
    border-radius: 16px;
    padding: 3rem;
    margin-top: 2rem;

    // Override some of the demo styles to fit better
    :global(.animation-demo) {
      padding: 0;

      h2 {
        display: none; // Hide the duplicate title
      }
    }
  }

  // Mobile optimizations
  @media (max-width: 768px) {
    .brand-header .brand-title {
      font-size: 2rem;
    }

    .color-grid {
      grid-template-columns: 1fr;
    }

    .font-sample .sample-h1 {
      font-size: 2rem;
    }

    .font-sample .sample-h2 {
      font-size: 1.5rem;
    }
  }
</style>

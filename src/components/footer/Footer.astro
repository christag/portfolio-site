---
// Footer.astro - Simplified Footer without Navigation
export interface Props {
  currentYear?: number;
}

const { currentYear = new Date().getFullYear() } = Astro.props;

// Social links with icons
const socialLinks = [
  { name: 'GitHub', url: 'https://github.com', icon: 'G' },
  { name: 'LinkedIn', url: 'https://linkedin.com', icon: 'L' },
  { name: 'Twitter', url: 'https://twitter.com', icon: 'T' },
];
---

<footer id="main-footer" class="footer-glassmorphism">
  <div class="footer-inner">
    <!-- Simplified single row layout -->
    <div class="footer-content">
      <!-- Left: Copyright -->
      <div class="footer-info">
        <p class="footer-text">
          Â© {currentYear} christopher tagliaferro
        </p>
        <p class="footer-subtitle">Technology Consultant & Virtual CIO</p>
      </div>

      <!-- Right: Social links -->
      <div class="social-links">
        {
          socialLinks.map((social) => (
            <a href={social.url} class="social-link" aria-label={social.name}>
              {social.icon}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

<style>
  /* Beautiful Glassmorphism Footer - CLEAN IMPLEMENTATION */
  .footer-glassmorphism {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 9999;

    /* Beautiful glassmorphism for light theme */
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 -4px 30px rgba(0, 0, 0, 0.1);
  }

  /* Dark theme glassmorphism - WORKING TRANSPARENT GLASS */
  html[data-theme='dark'] footer.footer-glassmorphism {
    /* TRUE transparent glass - background shows through */
    background: rgba(0, 0, 0, 0.15) !important;
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
    border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    box-shadow: 0 -2px 16px rgba(0, 0, 0, 0.5) !important;
  }

  /* Remove test styles */
  [data-theme='dark'] footer {
    outline: none !important;
  }

  /* Inner container for proper spacing */
  .footer-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    flex-wrap: wrap;
    /* MOBILE FIX: Reduce padding on mobile */
  }

  /* Footer text styling */
  .footer-info {
    text-align: left;
  }

  .footer-text {
    font-size: 0.875rem;
    margin: 0;
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .footer-subtitle {
    font-size: 0.75rem;
    margin: 0;
    color: var(--color-text-secondary);
    opacity: 0.8;
  }

  /* Social links with glassmorphism */
  .social-links {
    display: flex;
    gap: 0.75rem;
    /* MOBILE FIX: Reduce gap on mobile */
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.3s ease;
    /* MOBILE FIX: Improve touch interaction */
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  [data-theme='dark'] .social-link {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    background: rgba(184, 134, 154, 0.2);
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 479px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem; /* Reduced gap */
      padding: 0.75rem 0; /* Reduced padding */
    }

    .footer-info {
      text-align: center;
    }

    /* MOBILE FIX: Make social links smaller and more compact */
    .social-links {
      gap: 0.5rem;
    }

    .social-link {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.75rem;
    }

    .footer-text {
      font-size: 0.8rem;
    }

    .footer-subtitle {
      font-size: 0.7rem;
    }
  }

  /* Additional mobile optimization for very small screens */
  @media (max-width: 320px) {
    .footer-content {
      padding: 0.5rem 0;
      gap: 0.25rem;
    }
  }
</style>

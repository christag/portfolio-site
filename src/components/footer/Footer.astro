---
// Footer.astro - Simplified Footer without Navigation
export interface Props {
  currentYear?: number;
}

const { currentYear = new Date().getFullYear() } = Astro.props;

// Social links with SVG icons
const socialLinks = [
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/christophertagliaferro/',
    icon: 'linkedin',
    ariaLabel: 'Connect with Christopher Tagliaferro on LinkedIn',
  },
  {
    name: 'Email',
    url: 'mailto:chris.tagliaferro@gmail.com',
    icon: 'email',
    ariaLabel: 'Send an email to Christopher Tagliaferro',
  },
  {
    name: 'Portfolio',
    url: 'https://christagliaferro.com',
    icon: 'portfolio',
    ariaLabel: "Visit Christopher Tagliaferro's portfolio website",
  },
];
---

<footer id="main-footer" class="footer-glassmorphism">
  <div class="footer-inner">
    <!-- Simplified single row layout -->
    <div class="footer-content">
      <!-- Left: Copyright -->
      <div class="footer-info">
        <p class="footer-text">
          Â© {currentYear} christopher tagliaferro
        </p>
        <p class="footer-subtitle">Technology Consultant & Virtual CIO</p>
      </div>

      <!-- Right: Social links -->
      <div class="social-links">
        {
          socialLinks.map((social) => (
            <a
              href={social.url}
              class="social-link"
              aria-label={social.ariaLabel}
              target={social.url.startsWith('mailto:') ? '_self' : '_blank'}
              rel={
                social.url.startsWith('mailto:') ? '' : 'noopener noreferrer'
              }
            >
              {social.icon === 'linkedin' && (
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
              {social.icon === 'email' && (
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h.273L12 9.545l10.091-5.724h.273c.904 0 1.636.732 1.636 1.636z" />
                </svg>
              )}
              {social.icon === 'portfolio' && (
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                </svg>
              )}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

<style>
  /* Beautiful Glassmorphism Footer - CLEAN IMPLEMENTATION */
  .footer-glassmorphism {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 9999;

    /* Beautiful glassmorphism for light theme */
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 -4px 30px rgba(0, 0, 0, 0.1);
  }

  /* Dark theme glassmorphism - WORKING TRANSPARENT GLASS */
  html[data-theme='dark'] footer.footer-glassmorphism {
    /* TRUE transparent glass - background shows through */
    background: rgba(0, 0, 0, 0.15) !important;
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
    border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    box-shadow: 0 -2px 16px rgba(0, 0, 0, 0.5) !important;
  }

  /* Remove test styles */
  [data-theme='dark'] footer {
    outline: none !important;
  }

  /* Inner container for proper spacing */
  .footer-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    flex-wrap: wrap;
    /* MOBILE FIX: Reduce padding on mobile */
  }

  /* Footer text styling */
  .footer-info {
    text-align: left;
  }

  .footer-text {
    font-size: 0.875rem;
    margin: 0;
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .footer-subtitle {
    font-size: 0.75rem;
    margin: 0;
    color: var(--color-text-secondary);
    opacity: 0.8;
  }

  /* Social links with glassmorphism */
  .social-links {
    display: flex;
    gap: 0.75rem;
    /* MOBILE FIX: Reduce gap on mobile */
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.3s ease;
    /* MOBILE FIX: Improve touch interaction */
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  [data-theme='dark'] .social-link {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    background: rgba(184, 134, 154, 0.2);
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 479px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem; /* Reduced gap */
      padding: 0.75rem 0; /* Reduced padding */
    }

    .footer-info {
      text-align: center;
    }

    /* MOBILE FIX: Make social links smaller and more compact */
    .social-links {
      gap: 0.5rem;
    }

    .social-link {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.75rem;
    }

    .footer-text {
      font-size: 0.8rem;
    }

    .footer-subtitle {
      font-size: 0.7rem;
    }
  }

  /* Additional mobile optimization for very small screens */
  @media (max-width: 320px) {
    .footer-content {
      padding: 0.5rem 0;
      gap: 0.25rem;
    }
  }
</style>

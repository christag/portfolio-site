---
// SEO.astro - Reusable SEO component
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: string;
}

const {
  title = "Chris's Portfolio & Technology Consulting",
  description = 'Fractional CTO and technology consultant helping founders and small businesses with strategic IT guidance, automation, and sustainable growth solutions.',
  image = '/og-image.jpg', // You'll need to add this image
  canonical = Astro.url.href,
  type = 'website',
} = Astro.props;

// Ensure title includes site name
const fullTitle = title.includes('Chris')
  ? title
  : `${title} | Chris's Portfolio`;
---

<!-- Essential Meta Tags -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<title>{fullTitle}</title>

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />
<meta property="og:site_name" content="Chris's Portfolio" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.site)} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="author" content="Chris" />
<meta name="theme-color" content="#667eea" />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
